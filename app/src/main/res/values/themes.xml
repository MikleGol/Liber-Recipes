<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LiberFood" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/accent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>

        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>

        <item name="itemIconTint">@color/beige</item>
        <item name="itemTextColor">@color/beige</item>
        <item name="itemBackground">@color/beige_dark</item>

    </style>

    <style name="Beige" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/beige_dark</item>
        <item name="android:background">@drawable/button_beige</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Red" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/red_dark</item>
        <item name="android:background">@drawable/button_red</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Yellow" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/yellow_dark</item>
        <item name="android:background">@drawable/beige_dark_snack_bar</item>
        <item name="textAllCaps">false</item>
    </style>

    
    <style name="BeigeToast">
        <item name="stTextColor">@color/beige</item>
        <item name="stFont">@font/ubuntu_bold</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/black_overlay</item>
        <item name="stIconEnd">@drawable/ic_saved</item>
        <item name="stLength">SHORT</item>
        <item name="stGravity">top</item>
        <item name="stRadius">15dp</item>
    </style>

    <style name="BeigeSnackBar" parent="Widget.Design.Snackbar">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:textColor">@color/beige</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>